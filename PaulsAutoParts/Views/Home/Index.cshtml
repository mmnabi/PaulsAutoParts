@model PaulsAutoParts.ViewModelLayer.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Paul's Auto Parts</h1>
    <p>What Do You Want To Do?</p>
</div>

<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <h3 class="text-center">Shop For Auto Parts</h3>
            </div>
            <div class="card-footer text-center bg-primary text-light">
                <a class="btn btn-success" asp-action="Index" asp-controller="Shopping">
                    Go Shopping
                </a>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <h3 class="text-center">Manage Your Account</h3>
            </div>
            <div class="card-footer text-center bg-primary text-light">
                <a class="btn btn-success"
                   onclick="pageController.toggleMyAccountMenu();">
                    My Account
                </a>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <h3 class="text-center">Admin Maintenance</h3>
            </div>
            <div class="card-footer text-center bg-primary text-light">
                <a class="btn btn-success"
                   onclick="pageController.toggleMaintenanceMenu();">
                    Maintenance
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-4">
    </div>
    <div class="col-4">
        <div class="card d-none" id="myAccountMenu">
            <div class="card-body">
                <div class="list-group">
                    <a asp-action="CustomerIndex"
                       asp-controller="Customer" class="list-group-item">
                        My Information
                    </a>
                    <a asp-action="CustomerPaymentIndex"
                       asp-controller="CustomerPayment" class="list-group-item">
                        My Payments
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card d-none" id="maintenanceMenu">
            <div class="card-body">
                <div class="list-group">
                    <a asp-action="ProductIndex"
                       asp-controller="Product" class="list-group-item">
                        Products
                    </a>
                    <a asp-action="CustomerMaintIndex"
                       asp-controller="CustomerMaint" class="list-group-item">
                        Customers and Orders
                    </a>
                    <a asp-action="PromoCodeIndex"
                       asp-controller="PromoCode" class="list-group-item">
                        Promotional Codes
                    </a>
                    <a asp-action="VehicleTypeIndex"
                       asp-controller="VehicleType" class="list-group-item">
                        Vehicle Types
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        'use strict';

        // ************************************
        // Create a closure
        // ************************************
        let pageController = (function () {
            // ************************************
            // Private Functions
            // ************************************
            function toggleMyAccountMenu() {
                $("#myAccountMenu").toggleClass("d-none");
                $("#maintenanceMenu").addClass("d-none");
            }

            function toggleMaintenanceMenu() {
                $("#maintenanceMenu").toggleClass("d-none");
                $("#myAccountMenu").addClass("d-none");
            }

            // ************************************
            // Public Functions
            // ************************************
            return {
                "toggleMyAccountMenu": toggleMyAccountMenu,
                "toggleMaintenanceMenu": toggleMaintenanceMenu
            }
        })();
    </script>
}

