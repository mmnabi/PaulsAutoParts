@model PaulsAutoParts.ViewModelLayer.VehicleTypeViewModel

<form method="get" asp-action="Search">
  <div class="card">
    <div class="card-header bg-primary text-light">
      <a id="searchHeader" class="d-block text-light" data-toggle="collapse" href="#searchBody" aria-expanded="false" aria-controls="searchBody">
        Search for Vehicle Types
      </a>
      <span>Filter Applied: @Model.SearchEntity.ToString()</span>
    </div>
    <div id="searchBody" class="collapse" aria-labelledby="searchHeader">
      <div class="card-body">
        <div class="form-group">
          <label asp-for="SearchEntity.Make" class="control-label"></label>
          <input asp-for="SearchEntity.Make" class="form-control" />
        </div>
        <div class="form-group">
          <label asp-for="SearchEntity.Model" class="control-label"></label>
          <input asp-for="SearchEntity.Model" class="form-control" />
        </div>
        <div class="form-group">
          <label asp-for="SearchEntity.Year"></label>
          <select class="form-control"
                  asp-for="SearchEntity.Year"
                  asp-items="@(new SelectList(Model.Years))">
          </select>
        </div>
      </div>
    </div>
    <div class="card-footer bg-primary text-light">
      <div class="row">
        <div class="col-8">
          <button formnovalidate="formnovalidate" class="btn btn-success">Search</button>
          <a class="btn btn-primary" asp-action="VehicleTypeIndex">
            Reset
          </a>
          <a class="ml-5 btn btn-info" asp-action="Add">
            Add
          </a>
        </div>
        <div class="col-4">
          <p class="text-right">
            Records Found: @String.Format("{0:n0}", Model.TotalRecords)
          </p>
        </div>
      </div>
    </div>
  </div>
</form>
