@using PaulsAutoParts.EntityLayer
@model PaulsAutoParts.ViewModelLayer.VehicleTypeViewModel

@if (Model.DataCollection == null || Model.DataCollection.Count == 0) {
  <p>Enter search parameters, then click Search button</p>
}
else {
  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th>Actions</th>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      @foreach (VehicleType item in Model.DataCollection) {
        <tr>
          <td>
            <a asp-action="Edit"
               asp-route-id="@item.VehicleTypeId"
               class="btn btn-primary">
              Edit
            </a>
          </td>
          <td>@Html.DisplayFor(m => item.Make)</td>
          <td>@Html.DisplayFor(m => item.Model)</td>
          <td>@Html.DisplayFor(m => item.Year)</td>
          <td>
            @Html.ActionLink("Delete", "Delete",
                new { id = item.VehicleTypeId },
                new
                  {
                    onclick = "return confirm('Delete this Vehicle Type?');",
                    @class = "btn btn-danger"
                  })
          </td>
        </tr>
      }
    </tbody>
  </table>
}
