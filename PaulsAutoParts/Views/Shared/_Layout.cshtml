<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"]</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />

  @RenderSection("HeadStyles", required: false)
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
      <div class="container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Paul's Auto Parts</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
          <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
              <a class="nav-link text-dark" asp-controller="Shopping" asp-action="Index">Shop</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="adminDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Admin
              </a>
              <div class="dropdown-menu" aria-labelledby="adminDropDown">
                <a asp-action="ProductIndex"
                   asp-controller="Product" class="dropdown-item">
                  Products
                </a>
                <div class="dropdown-divider"></div>

                <a asp-action="CustomerMaintIndex"
                   asp-controller="CustomerMaint" class="dropdown-item">
                  Customers / Orders
                </a>

                <div class="dropdown-divider"></div>

                <a asp-action="PromoCodeIndex"
                   asp-controller="PromoCode" class="dropdown-item">
                  Promotional Codes
                </a>

                <a asp-action="VehicleTypeIndex"
                   asp-controller="VehicleType" class="dropdown-item">
                  Vehicle Types
                </a>
              </div>
            </li>
          </ul>
          <ul class="navbar-nav ml-2 justify-content-end">
            <li class="nav-item dropdown bg-dark text-light p-1">
              <a class="text-light" asp-action="Index" asp-controller="Cart">@ViewData["ItemsInCart"] Items in Cart</a>
            </li>
          </ul>
          <ul class="navbar-nav ml-2 mr-auto justify-content-end">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="custDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @ViewData["CustomerName"]
              </a>
              <div class="dropdown-menu" aria-labelledby="custDropDown">
                <a asp-action="CustomerIndex"
                   asp-controller="Customer" class="dropdown-item">
                  My Information
                </a>
                <a asp-action="CustomerPaymentIndex"
                   asp-controller="CustomerPayment" class="dropdown-item">
                  My Orders/Payments
                </a>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-muted">
    <div class="container">
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
