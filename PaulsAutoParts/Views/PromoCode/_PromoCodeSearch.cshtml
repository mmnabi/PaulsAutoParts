@model PaulsAutoParts.ViewModelLayer.PromoCodeViewModel

<form method="get" asp-action="Search"
      data-waitmsg="Please wait while searching for
          specified promotional codes...">
    <div class="card">
        <div class="card-header bg-primary text-light">
            <a id="searchHeader" class="d-block text-light" data-toggle="collapse" href="#searchBody" aria-expanded="false" aria-controls="searchBody">
                Search for Promotional Codes
            </a>
            <span>Filter Applied: @Model.SearchEntity.ToString()</span>
        </div>
        <div id="searchBody" class="collapse" aria-labelledby="searchHeader">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="SearchEntity.Code" class="control-label"></label>
                    <input asp-for="SearchEntity.Code" class="form-control" />
                </div>
            </div>
        </div>
        <div class="card-footer bg-primary text-light">
            <div class="row">
                <div class="col-8">
                    <button formnovalidate="formnovalidate" class="btn btn-success">Search</button>
                    <a class="btn btn-primary" asp-action="PromoCodeIndex"
                       onclick="mainController.pleaseWait(this);"
                       data-waitmsg="Please wait while getting all promo codes...">
                        Reset
                    </a>
                    <a class="ml-5 btn btn-info" asp-action="Add">
                        Add
                    </a>
                </div>
                <div class="col-4">
                    <p class="text-right">
                        Records Found: @String.Format("{0:n0}", Model.TotalRecords)
                    </p>
                </div>
            </div>
        </div>
    </div>
</form>
