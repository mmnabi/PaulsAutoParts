@using PaulsAutoParts.EntityLayer
@model PaulsAutoParts.ViewModelLayer.PromoCodeViewModel

@if (Model.DataCollection == null || Model.DataCollection.Count == 0) {
  <p>Enter search parameters, then click Search button</p>
}
else {
  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th>Actions</th>
        <th>Promotional Code</th>
        <th>Discount Percent</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      @foreach (PromoCode item in Model.DataCollection) {
      <tr>
        <td>
          <a asp-action="Edit"
             asp-route-id="@item.PromoCodeId"
             class="btn btn-primary">
            Edit
          </a>
        </td>
        <td>@Html.DisplayFor(m => item.PromotionalCode)</td>        
        <td>@Html.DisplayFor(m => item.DiscountPercent)</td>
        <td>@Html.DisplayFor(m => item.StartDate)</td>
        <td>@Html.DisplayFor(m => item.EndDate)</td>
        <td>
          @Html.ActionLink("Delete", "Delete",
              new { id = item.PromoCodeId },
              new
                {
                  onclick = "return confirm('Delete this Promotional Code?');",
                  @class = "btn btn-danger"
                })
        </td>
      </tr>
      }
    </tbody>
  </table>
}
